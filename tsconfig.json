{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "baseUrl": "types",
    "typeRoots": [
      "types"
    ]
  },
  "types": [ "node" ],
  "typeRoots": [ "node_modules/@types"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts"
  ],
}